page {
  background-color: #dedede;
  padding: 20rpx;
}
.container .search-wrap {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  position: relative;
}
.container .search-wrap .search-input {
  flex: 1;
  background-color: #fff;
  height: 80rpx;
  border-radius: 50rpx;
  padding-left: 30rpx;
}
.container .search-wrap .cancel {
  position: absolute;
  z-index: 2;
  right: 0;
  width: 150rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 0 50rpx 50rpx 0;
  font-weight: 600;
}
.container .search-content {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.container .search-content .search-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
