.address-container {
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx;
  font-size: 30rpx;
}
.address-container .title {
  color: var(--themeColor);
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0;
  padding: 10rpx 0;
}
.address-container .address-info {
  flex: 5;
  display: flex;
}
.address-container .address-info .name {
  flex: 5;
}
.address-container .address-info .tel {
  flex: 3;
  text-align: right;
}
.address-container .address {
  flex: 2;
  margin-top: 20rpx;
}
