.goods-item-container {
    display: flex;
    border-bottom: 4rpx solid #eee;
    padding: 30rpx 10rpx;
    position: relative;
    height: 224rpx;
}

.goods-item-container .goods-item {
    flex: 5;
    display: flex;
    width: 90%;
    display: flex;
    padding: 10rpx 0;
}

.goods-item .goods-img {
    flex: 3;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
.goods-item .goods-img .back {
    width: 60%;
    height: 60%;
    filter: blur(1px);
    position: absolute;
    z-index: 1;
}
.goods-item .goods-img .img {
    position: absolute;
    z-index: 2;
    width: 60%;
}

.goods-item .goods-info {
    flex: 4;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.goods-item .goods-info .goods-name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
    color: #555;
    margin-bottom: 60rpx;
    
}
.goods-price-row {
    flex: 2;
    position: absolute;
    right: 0;
    bottom: 20rpx;
    width: 58%;
    justify-content: space-between;
    align-items: center;
    display: flex;
}
.goods-price-row .goods-price {
    color: var(--themeColor);
    font-weight: bold;
    font-size: 32rpx;
}
